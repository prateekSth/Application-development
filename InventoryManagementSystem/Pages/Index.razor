@page "/"

@inject NavigationManager NavManager

@code {
    [CascadingParameter]
    private State globalState { get; set; }

    protected override void OnInitialized()
    {
        if (globalState.CurrentUser == null)
        {
            NavManager.NavigateTo("/login");
        }
        else
        {
            NavManager.NavigateTo("/products");
        }
    }
}